if conditions
-------------

if(exp)
{  ==
   ==}
else
{ ===
  ===}

multiple if
------------

if(exp)
{
    ===
    ===
  }
else if(exp)
{  ==
   ==}
else if(exp)
{ ==
  ==
   }


while(exp)
{
    ===
    ===
    [break]
    [continue]
}

do
{
    ===
    ===
    [break]
    [continue]
}while(exp);


for(<initialization>;<condition>;<statement>)
{
    ====
    [break]
    [continue]
}

switch(var)
{
    case <const>:
     =====
     ===
     [break]
    case <const>
     ====
     ===
     [break]
    default:
}


function <fname>(parameter)
{
    =====
    ====
}

